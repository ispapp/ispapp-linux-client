    get_spectral_scan = {
        call = function(args)
            local r = {}
            local inter = args.interface or "wifi0"
            local ok, _, _err = pcall(util.exec, string.format(
                "spectraltool -i %s get_samples 500 -x 1 -l ',' 2>/dev/null", inter))
            local parsed, json, err = pcall(extract_spectral_samples, "./outFile")
            r.result = jsonc.stringify({
                status = ok,
                parsed = parsed,
                error = _err,
                parseerror = err,
                json = json
            })
            return r
        end
    },
