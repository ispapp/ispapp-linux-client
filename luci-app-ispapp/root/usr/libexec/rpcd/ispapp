--     log_to_syslog("info", "[luci.ispapp]: " .. message)
-- end
-- local function log_notice(message)
--     log_to_syslog("info", "[luci.ispapp]: " .. message)
-- end
-- return file content or nil
local function catFile(file)
    local ok, content, error = pcall(fs.readfile, file)
    if not ok then
        return nil
    end
    return content
end
-- Function to get GPS data from a file
local function get_gps_data()
    local lat, lon, alt = nil, nil, nil
    -- Open the file in read mode
    local path = "/tmp/gps_info.txt"
    local file = io.open(path, "r")
    if not file then
        return "File not found"
    end

    for line in file:lines() do
        -- Match formatted line like: latitude=26.083150, longitude=- 98.371586, altitude=60.8
        local lat_match = line:match("latitude%s*=%s*([%d%.%-NA/]+)")
        local lon_match = line:match("longitude%s*=%s*([%-%s%d%.NA/]+)")
        local alt_match = line:match("altitude%s*=%s*([%d%.%-NA/]+)")

        -- Clean and normalize
        if lat_match and lat_match ~= "N/A" then
            lat = tonumber(lat_match)
        end

        if lon_match and lon_match ~= "N/A" then
            -- Remove spaces like "- 98.371586"
            lon_match = lon_match:gsub("%s+", "")
            lon = tonumber(lon_match)
        end

        if alt_match and alt_match ~= "N/A" then
            alt = tonumber(alt_match)
        end
    end

    file:close()
    if lat and lon then
        return {
            latitude = lat,
            longitude = lon,
            height = alt
        }
    else
        return {
            latitude = nil,
            longitude = nil,
            height = nil
        }
    end
end
