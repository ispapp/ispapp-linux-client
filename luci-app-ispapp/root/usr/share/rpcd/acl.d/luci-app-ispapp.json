{
  "luci-app-ispapp": {
    "description": "Grant UCI and RPC access to LuCI ispapp",
    "write": {
      "uci": [
        "ispappd"
      ],
      "file": {
				"/etc/config/*": ["read", "write"]
			}
    },
    "read": {
      "cgi-io": [ "exec" ],
			"file": {
				"/var/run/ispapp.pid": ["read"],
				"/tmp/ispapp_runtime.json": ["read"],
				"/etc/crontabs/root": ["read"],
				"/sbin/logread -e ispapp": [ "exec" ],
				"/usr/sbin/logread -e ispapp": [ "exec" ],
				"/etc/init.d/ispapp reload" : [ "exec" ],
				"/etc/init.d/ispapp start" : [ "exec" ],
				"/etc/init.d/ispapp stop" : [ "exec" ],
				"/usr/bin/ispappd query *" : [ "exec" ]
			},
			"uci": ["ispapp"]
    }
  }
}
